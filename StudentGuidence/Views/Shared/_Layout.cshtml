    <link href="~/sitfiles/bootstrap-icons/bootstrap-icons.css" rel="stylesheet">
    <link href="~/sitfiles/glightbox/css/glightbox.min.css" rel="stylesheet">
    <link href="~/sitfiles/remixicon/remixicon.css" rel="stylesheet">
    <link href="~/sitfiles/swiper/swiper-bundle.min.css" rel="stylesheet">
    <!-- Main CSS File -->
    <link href="~/css/style.css" rel="stylesheet">

</head>
<body>

    <header id="header" class="container-fluid header fixed-top bg-white">
        <div class="container-fluid container-xxl d-flex align-items-center justify-content-between">
            <a asp-controller="Home" asp-action="Index" class="logo d-flex align-items-center">
                @*<img src="~/img/logo.png" alt="">*@
                <span> د زده کونکو لارښود </span>
            </a>
            <nav id="navbar" class="navbar">
                <ul>
                    <li>
                        <a asp-area="Visitor" asp-controller="PostArticle" asp-action="Create" class="nav-link">Post Article</a>
                    </li>

                    @if (signInManager.IsSignedIn(User) && User.IsInRole(SD.Admin))
                    {
                        <li><a asp-area="Admin" asp-controller="University" asp-action="Index" class="nav-link">University</a> </li>
                        <li><a asp-area="Admin" asp-controller="Faculty" asp-action="Index" class="nav-link scrollto">Faculty</a> </li>
                        <li><a asp-area="Admin" asp-controller="Department" asp-action="Index" class="nav-link scrollto">Department</a> </li>
                        <li><a asp-area="Admin" asp-controller="Teacher" asp-action="Index" class="nav-link scrollto">Teacher</a> </li>
                        <li><a asp-area="Admin" asp-controller="Article" asp-action="Index" class="nav-link scrollto">Article</a> </li>
                        <li><a asp-area="Admin" asp-controller="Student" asp-action="Index" class="nav-link scrollto">Student</a> </li>
                        <li><a asp-area="Visitor" asp-controller="Home" asp-action="TestShow" class="nav-link scrollto">Test</a> </li>
                        <li><a asp-area="Identity" asp-controller="Administration" asp-action="ListRoles" class="x-2 text-center nav-link scrollto">Administration</a> </li>

                        <li class="ml-1">
                            <div class="dropdown">
                                <button class="dropdown btn btn-primary dropdown-toggle" data-toggle="dropdown">
                                    Public Menue
                                </button>
                                <div class="dropdown-menu">
                                    <a class="bg-dark text-white dropdown-item" asp-area="Visitor" asp-controller="Home" asp-action="About"> زمونږ په اړه </a>
                                    <a class="bg-dark text-white dropdown-item" asp-area="Visitor" asp-controller="Home" asp-action=""> اړیکه </a>
                                    <a class="bg-dark text-white dropdown-item" asp-area="Visitor" asp-controller="Home" asp-action="Team"> ګروپ </a>
                                    <a class="bg-dark text-white dropdown-item" asp-area="Visitor" asp-controller="Home" asp-action="Universities"> پوهنتونونه </a>
                                    <a class="bg-dark text-white dropdown-item" asp-area="Visitor" asp-controller="Home" asp-action="Index"> کور </a>
                                </div>
                            </div>
                        </li>

                        <li>
                            <a asp-area="Identity" asp-controller="Account" asp-action="Logout" class="nav-link scrollto active">
                                <span class="text-danger mr-2">Logout  </span>   @User.Identity.Name
                            </a>
                        </li>
                    }

                    else if (signInManager.IsSignedIn(User) && User.IsInRole(SD.Student))
                    {
                        <li class="text-danger">Welcome student.</li>

                        <li><a class="nav-link scrollto" asp-area="Visitor" asp-controller="Home" asp-action="About"> زمونږ په اړه </a></li>
                        <li><a class="nav-link scrollto" asp-area="Visitor" asp-controller="Home" asp-action=""> اړیکه </a></li>
                        <li><a class="nav-link scrollto" asp-area="Visitor" asp-controller="Home" asp-action="Team"> ګروپ </a></li>
                        <li><a class="nav-link scrollto" asp-area="Visitor" asp-controller="Home" asp-action="Universities"> پوهنتونونه </a></li>
                        <li><a class="nav-link scrollto active" asp-area="Visitor" asp-controller="Home" asp-action="Index"> کور </a></li>
                        <li><a class="nav-link scrollto active" asp-area="Admin" asp-controller="University" asp-action="Test">List</a></li>
                        <li><a class="nav-link scrollto active" asp-area="Identity" asp-controller="Account" asp-action="AddRegistrationDetail">My Profile</a></li>

                        <li>
                            <a asp-area="Identity" asp-controller="Account" asp-action="Logout" class="nav-link scrollto active">
                                <span class="text-danger mr-2">Logout  </span>   @User.Identity.Name
                            </a>
                        </li>
                    }

                    else if (signInManager.IsSignedIn(User) && User.IsInRole(SD.Teacher))
                    {
                        <li class="text-danger">Welcome Teacher.</li>

                        <li><a class="nav-link scrollto" asp-area="Visitor" asp-controller="Home" asp-action="About"> زمونږ په اړه </a></li>
                        <li><a class="nav-link scrollto" asp-area="Visitor" asp-controller="Home" asp-action=""> اړیکه </a></li>
                        <li><a class="nav-link scrollto" asp-area="Visitor" asp-controller="Home" asp-action="Team"> ګروپ </a></li>
                        <li><a class="nav-link scrollto" asp-area="Visitor" asp-controller="Home" asp-action="Universities"> پوهنتونونه </a></li>
                        <li><a class="nav-link scrollto active" asp-area="Visitor" asp-controller="Home" asp-action="Index"> کور </a></li>
                        <li><a class="nav-link scrollto active" asp-area="Admin" asp-controller="University" asp-action="Test">List</a></li>


                        <li>
                            <a asp-area="Identity" asp-controller="Account" asp-action="Logout" class="nav-link scrollto active">
                                <span class="text-danger mr-2">Logout  </span>   @User.Identity.Name
                            </a>
                        </li>

                    }
                    else
                    {

                        <li><a class="nav-link scrollto" asp-area="Visitor" asp-controller="Home" asp-action="About"> زمونږ په اړه </a></li>
                        <li><a class="nav-link scrollto" asp-area="Visitor" asp-controller="Home" asp-action="Contact"> اړیکه </a></li>
                        <li><a class="nav-link scrollto" asp-area="Visitor" asp-controller="Home" asp-action="Team"> ګروپ </a></li>
                        <li><a class="nav-link scrollto" asp-area="Visitor" asp-controller="Home" asp-action="Universities"> پوهنتونونه </a></li>
                        <li><a class="nav-link scrollto active" asp-area="Visitor" asp-controller="Home" asp-action="Index"> کور </a></li>
                        <li><a class="nav-link scrollto active" asp-area="Admin" asp-controller="University" asp-action="Test">List</a></li>
                        <li>
                            <a asp-area="Identity" asp-controller="Account" asp-action="Login" class="nav-link scrollto active">Login</a>
                        </li>
                        <li>
                            <a asp-area="Identity" asp-controller="Account" asp-action="Register" class="nav-link scrollto active">Register</a>
                        </li>
                        <li><a asp-area="Visitor" asp-controller="Home" asp-action="TestShow" class="nav-link scrollto">Test</a> </li>

                    }


                    <!--  <a class="getstarted scrollto" asp-controller="Home" asp-action="Login"> ننوتل </a></li>-->
                </ul>
                <i class="bi bi-list mobile-nav-toggle"></i>
            </nav><!-- .navbar -->

        </div>

        @*</nav>*@
    </header>

    <!--===================== End of Header =========================-->
    <!--****************************************************************************-->
    <section class="container-fluid py-5">

        <div class="container-fluid my-2">
            <main role="main" class="pb-3">
                @RenderBody()
            </main>
        </div>

    </section>
    <!--===========Footer of Page-->

    <footer class="footer text-muted py-0">
        <div class="container-fluid ">
            <p> &copy; 2022 - STUDENT__GUIDANCE - <a asp-area="" asp-controller="Home" asp-action="Index">WebSite</a></p>
        </div>
    </footer>



    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>



