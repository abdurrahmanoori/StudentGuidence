@model StudentGuidence.Models.Teacher
@{
    ViewData["Title"] = "AddRegistrationDetail4Teacher";
}

<h1>AddRegistrationDetail4Teacher</h1>

<sction class="contianer-fluid">
    <p class="display-5  text-center pt-5"> ثبت پاڼه </p>
    <div class="form-group ">
        <form method="post" enctype="multipart/form-data" class="form-control form-control-lg h-100 border-danger py-5 mb-3">
            <input asp-for="Id" hidden />
            <lable><p class="text-end">  :شخصی معلومات </p></lable>
            <div class="row py-4">
                <div class="col">
                    <label asp-for="FirstName" class="form-label"></label>
                    <input asp-for="FirstName" placeholder="  نوم  " class="form-control form-control-lg border-primary" />
                    <span asp-validation-for="FirstName" class="text-danger"></span>
                </div>
                <div class="col">
                    <label asp-for="LastName" class="form-label"></label>
                    <input asp-for="LastName" placeholder="  تخلص  " class="form-control form-control-lg border-primary" />
                    <span asp-validation-for="LastName" class="text-danger"></span>
                </div>
            </div>

            <div class="row py-3">
                <div class="col">
                    <label asp-for="Degree" class="form-label"></label>
                    <input asp-for="Degree" placeholder="" class="form-control form-control-lg border-primary" />
                    <span asp-validation-for="Degree" class="text-danger"></span>
                </div>
            </div>

            <div class="row py-3">
                <div class="col">
                    <label asp-for="Email" class="form-label"></label>
                    <input asp-for="Email" placeholder=" بریښنا لیک" class="form-control form-control-lg border-primary" />
                    <span asp-validation-for="Email" class="text-danger"></span>
                </div>
            </div>

            <div class="row py-3">
                <div class="col">
                    <label asp-for="Phone" class="form-label"></label>
                    <input asp-for="Phone" placeholder="" class="form-control form-control-lg border-primary" />
                    <span asp-validation-for="Phone" class="text-danger"></span>
                </div>
            </div>

            <div class="col">
                <label asp-for="Province"></label>
                <input asp-for="Province" placeholder="  تخلص  " class="form-control form-control-lg border-primary" />
                <span asp-validation-for="Province"></span>
            </div>
            <div class="col">
                <label asp-for="District"></label>
                <input asp-for="District" class="form-control form-control-lg border-primary" />
                <span asp-validation-for="District"></span>
            </div>

            <div class="col">
                <label asp-for="ImageUrl"></label>
                <input type="file" name="file" class="form-control form-control-lg border-primary" />
            </div>

            <div class="row py-3">
                
                <div class="col">
                    <select asp-for="@Model.FacultyId" asp-items="@ViewBag.facultyList" class="form-control"></select>
                </div>
            </div>
            <div class="row py-3">
            </div>
            <div class=" col-3">
                <input type="submit" class="btn btn-primary" value="Update" />
            </div>
        </form>
    </div>
</sction>

@section Scripts{
    @{
        <partial name="_ValidationScriptsPartial" />
    }
}


