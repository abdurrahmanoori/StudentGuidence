@model StudentGuidence.Models.ViewModels.LoginViewModel
@{
    ViewData["Title"] = "Login";
}

<div class="container pt-5">
    <p class="text-center  display-5  text-dark"> سیستم ته ننوتل </p>
    <div class="tab-content">
        <div class="tab-pane fade show active" id="pills-login" role="tabpanel" aria-labelledby="tab-login">
            <form asp-action="Login" method="post" class="container border-primary">
                <div class="form-outline mb-4">
                    <input asp-for="Email" class="form-control" placeholder="  بریښنا لیک  " />
                    <span asp-validation-for="Email" class="text-danger"></span>
                </div>
                <div class="form-outline mb-4">
                    <input asp-for="Password" class="form-control" placeholder="  پټ نوم  " />
                    <span asp-validation-for="Password" class="text-danger"></span>
                </div>
                <div class="row mb-4">
                    <div class="col-md-6 d-flex justify-content-center">
                        <!-- Checkbox -->
                        <div class="form-check mb-3 mb-md-0">
                            <label class="form-check-label" for="loginCheck">
                                <input asp-for="RememberMe" class="form-check-input" /> @*@Html.DisplayNameFor(model=>model.RememberMe)*@
                                <b> ثبت پاتی کیدل </b>
                            </label>
                        </div>
                    </div>
                    <div class="col-md-6 d-flex justify-content-center">
                        <!-- Simple link -->
                        <a href="#"><h4><b> پټ نوم مو هیر دي ؟ </b></h4></a>
                    </div>
                </div>
                <button type="submit" class="btn btn-primary btn-block mb-4"><h5><b> ننوتل </b></h5></button>
                <div class="text-center">
                    <p>Not a member? <a asp-area="Identity" asp-controller="Account" asp-action="Register"><h4><b> ثبتونه </b></h4></a></p>
                </div>
            </form>
        </div>


    </div>
</div>
<!-- Pills content -->
}






