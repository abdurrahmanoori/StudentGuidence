@model StudentGuidence.Models.ViewModels.DepartmentListViewModel
@using StudentGuidence.Utility
@{
    ViewData["Title"] = "Faculty";
}

<section class="bg-light p-0">
    <div class="container p-5">
        <div class="card text-bg-dark">
            <img src="@Model.Departments.ElementAtOrDefault(0).Faculty.ImageUrl" class="card-img" alt="...">
            <div class="card-img-overlay text-center" lang="ar" dir="rtl">
                <div class="card-img-overlay" style="background: rgb(0, 0, 0);background: rgba(0, 0, 0, 0.5);color: #f1f1f1;">
                    <h3><b>د ډیټابیس څخه ډیټا راخستل</b></h3>
                    <p><b>دغه څانګه چې د کمپیوټر ساینس یو برخه ده. نو اړینه ده چې عمق د زده کړی ته یی ځان ورسوه.</b></p>
                </div>
            </div>
        </div>
        <hr class="bg-black" />
        <hr class="bg-danger" />
        <hr class="bg-success" />
    </div>
</section>

