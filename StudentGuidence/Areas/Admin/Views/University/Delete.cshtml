@model StudentGuidence.Models.University

@{
    ViewData["Title"] = "Delet";
}



<h4 class="text-center py-lg-5">University Object Deletion</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Delete" method="post">
            <input type="hidden" asp-for="Id" />
            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input disabled asp-for="Name" class="form-control text-danger" />
            </div>
            <div class="form-group">
                <label asp-for="Province" class="control-label"></label>
                <input disabled asp-for="Province" class="form-control text-danger" />
            </div>
            <div class="form-group">
                <label asp-for="Establishment" class="control-label"></label>
                <input disabled asp-for="Establishment" class="form-control text-danger" />
            </div>

            <div class="form-group">


                <button type="submit" class="btn btn-outline-danger">
                    Delete

                    <img src="~/img/Icon/delete_25px.png" />

                </button>
                <a asp-action="Index" class="btn btn-outline-primary p-2 px-4">

                    Cancel
                </a>
            </div>

            @*<div class="form-group">
                        <input type="submit" value="Delete" class="btn btn-danger" />

                    <a asp-action="Index" class="btn btn-primary">

                        Cancel
                    </a>
                </div>*@
        </form>
    </div>
</div>

