@model IEnumerable<StudentGuidence.Models.University>
@{
    ViewData["Title"] = "Index";
}


<h1 class="container text-center py-5">University Table</h1>
<form class="form-control form-control-lg h-100 border-danger py-5 mb-3">
    <a asp-action="Create" class="float-right btn btn-primary font-weight-bold text-capitalize">


        @*<img src="~/img/Icon/aaa.png" />*@

        <img src="~/img/Icon/add_50px.png" />
        Create University
    </a>
    <table class="table table-bordered border-success">
        <tr>
            <th>Name</th>
            <th>Provnce</th>
            <th>Establish Date</th>
            <th>Manage</th>
            <th></th>
        </tr>
        @foreach (var university in Model)
        {
            <tr>
                <td>@university.Name</td>
                <td>@university.Province</td>
                <td>@university.Establishment.Date</td>
                <td >
                    <a asp-action="Delete" asp-route-id="@university.Id" class="mx-2">
                        <i class="bi bi-trash3-fill"></i>
                    </a>
                     <a asp-action="Edit" asp-route-id="@university.Id">
                         <i   class="bi bi-pencil-square "></i>

                    </a>
                </td>
            </tr>
        }
    </table>
</form>