@model StudentGuidence.Models.Faculty
@{
    ViewData["Title"] = "Delete";
}
<h1 clsass="text-center py-5">Delete Faculty</h1>
<form method="post" asp-controller="Faculty" enctype="multipart/form-data" asp-action="Delete" class="form-control form-control-lg h-100 border-danger py-5 mb-3">
    <div class="border p-3 mt-4 border-success ">
        <div class="row pb-2">
            <h2 class="text-primary">Delete Faculty</h2>

        </div>
        <div class="mb-3 ">
            <label asp-for="Name"></label>
            <input disabled asp-for="Name" class="form-control form-control-lg border-primary" />
        </div>
        <div class="mb-3 ">
            <label asp-for="History"></label>
            <textarea disabled class="form-control" rows="5" asp-for="History"></textarea>
        </div>
        <div class="mb-3">
            <label asp-for="PreRequirment"></label>
            <textarea disabled asp-for="PreRequirment" rows="7" class="form-control form-control-lg border-primary"></textarea>
        </div>
        <div class="mb-3">
            <label asp-for="ImageUrl"></label>
            <input disabled type="file" name="file" class="form-control" />
        </div>
        <div class="mb-3">
            <label asp-for="UniversityId"></label>
            <select disabled class="form-control" asp-for="UniversityId" asp-items="@(ViewBag.UniversityList)"></select>
            <span asp-validation-for="UniversityId" class="text-danger"></span>
        </div>

        <button type="submit" class="btn btn-outline-danger">
            Delete

            <img src="~/img/Icon/delete_25px.png" />

        </button>
        <a asp-action="Index" class="btn btn-outline-primary p-2 px-4">
            Cancel
        </a>
    </div>
</form>
