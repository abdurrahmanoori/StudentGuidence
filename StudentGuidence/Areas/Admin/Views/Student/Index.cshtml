@model IEnumerable<StudentGuidence.Models.Student>
@{
    ViewData["Title"] = "Index";
}
<h1>Index</h1>

<h1 class="container text-center py-5">Student Table</h1>
<form class="form-control form-control-lg h-100 border-danger py-5 mb-3">
    <a asp-action="Create" class="float-right btn btn-primary font-weight-bold text-capitalize">
        <img src="~/img/Icon/add_50px.png" />
        Create Student
    </a>
    <table class="table table-bordered border-success">
        <tr>
            <th>First Name</th>
            @*<th>Last Name</th>*@
            <th>Article Title</th>
            <th></th>
        @foreach (var student in Model)
        {
            <tr>
                <td>@student.FristName</td>
                <td>@student.LastName</td>
                @*<td>@student.Article.Title</td>*@
                <td>
                    <a asp-action="Detail" asp-route-id="@student.Id" class="bi bi-arrow-up-right-square">
                    </a>
                    <a asp-action="Delete" asp-route-id="@student.Id" class="mx-2">
                        <i class="bi bi-trash3-fill"></i>
                    </a>
                    <a asp-action="Edit" asp-route-id="@student.Id">
                        <i class="bi bi-pencil-square "></i>
                    </a>
                </td>
            </tr>
        }
    </table>
</form>