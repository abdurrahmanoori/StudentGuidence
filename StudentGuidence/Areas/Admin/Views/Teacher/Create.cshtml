@model StudentGuidence.Models.Teacher
@{
    ViewData["Title"] = "Create";
}
<h1 clsass="text-center py-5">Create Teacher</h1>
<form method="post" asp-controller="Teacher" enctype="multipart/form-data" asp-action="Create" class="form-control form-control-lg h-100 border-danger py-5 mb-3">
    <div class="border p-3 mt-4 border-success ">
        <div class="row pb-2">
            <h2 class="text-primary">Create Teacher</h2>
        </div>

        <div class="text-danger" asp-validation-summary="All"></div>
        <div class="mb-3 ">
            <label asp-for="FirstName"></label>
            <input asp-for="FirstName" class="form-control form-control-lg border-primary" />
            <span asp-validation-for="FirstName" class="text-danger"></span>
        </div>

        <div class="mb-3 ">
            <label asp-for="LastName"></label>
            <input asp-for="LastName" class="form-control form-control-lg border-primary" />
            <span asp-validation-for="LastName" class="text-danger"></span>
        </div>


        <div class="mb-3 ">
            <label asp-for="Degree"></label>
            <input asp-for="Degree" class="form-control form-control-lg border-primary" />
            <span asp-validation-for="Degree" class="text-danger"></span>
        </div>


        <div class="mb-3 ">
            <label asp-for="Province"></label>
            <input asp-for="Province" class="form-control form-control-lg border-primary" />
            <span asp-validation-for="Province" class="text-danger"></span>
        </div>

        <div class="mb-3 ">
            <label asp-for="District"></label>
            <input asp-for="District" class="form-control form-control-lg border-primary" />
            <span asp-validation-for="District" class="text-danger"></span>
        </div>

        <div class="mb-3 ">
            <label asp-for="Email"></label>
            <input asp-for="Email" class="form-control form-control-lg border-primary" />
            <span asp-validation-for="Email" class="text-danger"></span>
        </div>


        <div class="mb-3 ">
            <label asp-for="Phone"></label>
            <input asp-for="Phone" class="form-control form-control-lg border-primary" />
            <span asp-validation-for="Phone" class="text-danger"></span>
        </div>

        <div class="mb-3">
            <label asp-for="ImageUrl"></label>
            <input type="file" name="file" class="form-control" />
            <span asp-validation-for="ImageUrl" class="text-danger"></span>
        </div>

        <div class="mb-3">
            <label asp-for="FacultyId"></label>
            <select class="form-control" asp-for="FacultyId" asp-items="@(ViewBag.facultyList)"></select>
            <span asp-validation-for="FacultyId" class="text-danger"></span>
        </div>

        <div class="mb-3">
            <label asp-for="ArticleId"></label>
            <select class="form-control" asp-for="ArticleId" asp-items="@(ViewBag.aritcleList)"></select>
            <span asp-validation-for="ArticleId" class="text-danger"></span>
        </div>

        <button type="submit" class="btn btn-outline-success" style="width:150px">
            Create
            <img src="~/img/Icon/add25px.png" />
        </button>
        <a asp-action="Index" class="btn btn-outline-primary" style="width:150px;">
            <img src="~/img/Icon/back_50px.png" />
            Back to List
        </a>
    </div>
</form>


@section Scripts{
    @{
        <partial name="_ValidationScriptsPartial" />
    }
}